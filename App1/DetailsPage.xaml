<Page
    x:Class="App1.DetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock Margin="0,5,0,0" Text="{Binding PostName}"  Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" TextWrapping="Wrap"  Foreground="#0094ca" FontFamily="Segoe WP"   FontSize="28" ></TextBlock>

        <TextBlock Name="Milehdr" Text="Opening hours" Margin="0,15,0,0" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap"  Foreground="#0094ca" FontFamily="Segoe WP"   FontSize="23" ></TextBlock>
        <TextBlock Name="MileTxt"  Margin="200,15,0,0" HorizontalAlignment="Left"  Text="{Binding OpeningHours}"  Grid.Row="4"  VerticalAlignment="Center" Foreground="#003c4d" TextTrimming="WordEllipsis" FontFamily="Segoe WP" FontSize="22" ></TextBlock>

    </Grid>
</Page>
