<UserControl
    x:Class="App1.CustomControls.LocationPin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" UseLayoutRounding="False" 
   >

    <StackPanel HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="60" Height="60" >
        <Image x:Name="iconImage" Source="Assets/location-icon.png" Stretch="Uniform" Height="23" Width="50" Tapped="iconImage_Tapped"/>
        <TextBlock  x:Name="textName" TextWrapping="Wrap" Text="TextBlock" Foreground="Black" Height="36" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False"/>
    </StackPanel>
</UserControl>
