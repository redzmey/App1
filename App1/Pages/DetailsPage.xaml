<Page
    x:Class="App1.Pages.DetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:Name="btnBack" Icon="Back" Label="Back" IsHoldingEnabled="False" IsRightTapEnabled="False" IsDoubleTapEnabled="False" Click="btnBack_Click"/>
            <AppBarButton x:Name="btnNavigateTo" Icon="Globe" Label="Navigate to" Click="btnNavigateTo_Click"/>
        </CommandBar>
    </Page.BottomAppBar>

    <StackPanel>
        <TextBlock Name="tbxDescription" Text="Name" Margin="0,15,0,0" Grid.Row="4" Style="{ThemeResource HeaderTextBlockStyle}"  FontSize="23" Foreground="{ThemeResource ListBoxItemSelectedBackgroundThemeBrush}" ></TextBlock>
        <TextBlock x:Name="tbxServiceHours" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" FontFamily="Segoe WP"   FontSize="20" Padding="0,20,0,0"/>
        <TextBlock x:Name="tbxFullAddress" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" FontFamily="Segoe WP"   FontSize="20" Margin="0" Padding="0,20,0,0"/>

    </StackPanel>
</Page>
